  float basicSalary;
    float overTime;
    float incomeTax;
    float netPay;
    };

struct address{
  string city, phoneNumber;
};

struct Employee{
  string full_name, edu_level, category;
  int age;
  int phon_num, empId, experience;
  //string category;
  char sex;
    date currentDate, startingDate;
    payment pay;
    address empAddress;
};

void menu();
int main()
{
    system("cls");
     cout<<"=======================================================\n";
    cout<<"**********      Employee management system    **********\n";
    cout<<"=======================================================\n";

    do {

    menu();

    switch(choice){
        case 1: // data in
         break;
        case 2: // data display
             
         break;
        case 3: //data modify
             
          break;
        case 4: // delete data
            
           break;
        case 5: // search data
            
            break;
        case 6: // sorting data
            
           break;

         default : cout<<"ERROR: YOU ENTER UNKNOWN KEY....";
         }
         }while(choice!=0);


    return 0;
}
